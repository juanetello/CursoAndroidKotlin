<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/txtValor1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/txtValor2"/>
    <Button
            android:text="@string/btnSuma"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText2" android:onClick="sum"/>
    <Button
            android:text="@string/btnResta"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText2" android:onClick="sub"/>
    <Button
            android:text="@string/btnMultiplicacion"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button" android:onClick="multi"/>
    <Button
            android:text="@string/btnDivision"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button2" android:onClick="div"/>
    <TextView
            android:layout_width="321dp"
            android:layout_height="111dp"
            android:id="@+id/textViewResultado" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="250dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>